@model SocialWelfarre.Models.Barangay

@{
    ViewData["Title"] = "Barangay Details";
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
}

<!-- Trigger Button -->
<button type="button" class="btn btn-info mb-3" data-bs-toggle="modal" data-bs-target="#detailsModal">
    <i class="fas fa-eye"></i> View Details
</button>

<!-- Modal -->
<div class="card">
    <div class="card-body">
        <div class="form-section">
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content rounded-4 shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="detailsModalLabel"><i class="fas fa-info-circle"></i> Barangay Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <h4 class="mb-3 text-secondary">Barangay Information</h4>
                <dl class="row fs-5">
                    <dt class="col-sm-4 text-end">ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4 text-end">Barangay Name:</dt>
                    <dd class="col-sm-8">@Model.Barangays</dd>
                </dl>
            </div>
            <div class="modal-footer">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times-circle"></i> Close
                </button>
            </div>
        </div>
    </div>
</div>
