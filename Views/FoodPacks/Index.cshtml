<!-- Food Packs Table Card -->
<div class="card">
    <div class="card-body">
        <div class="table-container">
            <table id="example1" class="table table-striped">
                <thead>
                    <tr>
                        <th>First</th>
                        <th>Middle</th>
                        <th>Last</th>
                        <th>Barangay</th>
                        <th>Date Issued</th>
                        <th>Validate</th>
                        <th>Edit</th>
                        <th>View</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.First_Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Middle_Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Last_Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Barangay.Barangays)</td>
                            <td>@Html.DisplayFor(modelItem => item.Date_Issued)</td>
                            <td>@Html.DisplayFor(modelItem => item.Validate)</td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-action"><i class="fa fa-edit"></i> Edit</a>
                                </div>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary-action btn-action"><i class="fa fa-eye"></i> View</a>
                                </div>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-action"><i class="fa fa-trash"></i> Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize Flatpickr for the Date Issued field
        document.addEventListener("DOMContentLoaded", function () {
            flatpickr("#Date_Issued", {
                dateFormat: "d/m/Y",
                allowInput: true,
                clickOpens: true,
                wrap: false
            });
        });

    </script>
} *@