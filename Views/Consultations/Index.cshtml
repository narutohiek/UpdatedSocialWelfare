@model IEnumerable<SocialWelfarre.Models.Consultation>

@{
    ViewData["Title"] = "Consultations Management";
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
}



<!-- Add Consultation Form Card -->
<div class="card">
    <div class="card-body">
        <div class="form-section">
            <h4><i class="fas fa-plus-circle"></i> Add New Consultation</h4>
            <form asp-action="Create" method="post">
                <div class="form-row">
                    <div class="form-group">
                        <label for="First_Name" class="form-label"><i class="fas fa-user"></i> First Name</label>
                        <input type="text" class="form-control" id="First_Name" name="First_Name" placeholder="Enter First Name" required>
                    </div>
                    <div class="form-group">
                        <label for="Middle_Name" class="form-label"><i class="fas fa-user"></i> Middle Name</label>
                        <input type="text" class="form-control" id="Middle_Name" name="Middle_Name" placeholder="Enter Middle Name">
                    </div>
                    <div class="form-group">
                        <label for="Last_Name" class="form-label"><i class="fas fa-user"></i> Last Name</label>
                        <input type="text" class="form-control" id="Last_Name" name="Last_Name" placeholder="Enter Last Name" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="BeneficiaryId" class="form-label"><i class="fas fa-id-card"></i> Beneficiary ID</label>
                        <input type="text" class="form-control" id="BeneficiaryId" name="BeneficiaryId" placeholder="Enter Beneficiary ID" required>
                    </div>
                    <div class="form-group">
                        <label for="Consulatation_Date" class="form-label"><i class="fas fa-calendar-alt"></i> Consultation Date</label>
                        <input type="date" class="form-control" id="Consulatation_Date" name="Consulatation_Date" required>
                    </div>
                    <div class="form-group">
                        <label for="Consultation_Time" class="form-label"><i class="fas fa-clock"></i> Consultation Time</label>
                        <input type="time" class="form-control" id="Consultation_Time" name="Consultation_Time" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="consultation_status" class="form-label"><i class="fas fa-check-circle"></i> Consultation Status</label>
                        <input type="text" class="form-control" id="consultation_status" name="consultation_status" placeholder="Enter Consultation Status">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Add Consultation</button>
            </form>
        </div>
    </div>
</div>

<!-- Consultations Table Card -->
<div class="card">
    <div class="card-body">
        <table id="example1" class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First_Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Middle_Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Last_Name)</th>
                    <th>@Html.DisplayNameFor(model => model.BeneficiaryId)</th>
                    <th>@Html.DisplayNameFor(model => model.Consulatation_Date)</th>
                    <th>@Html.DisplayNameFor(model => model.Consultation_Time)</th>
                    <th>@Html.DisplayNameFor(model => model.consultation_status)</th>
                    <th>Edit</th>
                    <th>View</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.First_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Middle_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Last_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.BeneficiaryId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Consulatation_Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Consultation_Time)</td>
                        <td>@Html.DisplayFor(modelItem => item.consultation_status)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-action"><i class="fa fa-edit"></i> Edit</a>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary-action btn-action"><i class="fa fa-eye"></i> View</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-action"><i class="fa fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>