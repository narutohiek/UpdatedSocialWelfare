@model IEnumerable<SocialWelfarre.Models.ApplicationUser>

@{
    ViewData["Title"] = "Users List";
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
    int count = 1; // Add this for the ascending number
}

<!-- Users List Card -->
<div class="card">
    <div class="card-body">
        <!-- Users Table Section -->
        <div class="table-section">
            <table id="example1" class="table table-striped">
                <thead>
                    <tr>
                        <th><i class="fas fa-hashtag"></i> #</th> <!-- Changed this column title -->
                        <th><i class="fas fa-id-badge"></i> @Html.DisplayNameFor(model => model.EmpNo)</th>
                        <th><i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.UserName)</th>
                        <th><i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.FullName)</th>
                        <th><i class="fas fa-birthday-cake"></i> @Html.DisplayNameFor(model => model.Age)</th>
                        <th><i class="fas fa-venus-mars"></i> @Html.DisplayNameFor(model => model.Gender)</th>
                        <th><i class="fas fa-phone"></i> @Html.DisplayNameFor(model => model.PhoneNumber)</th>
                        <th><i class="fas fa-envelope"></i> @Html.DisplayNameFor(model => model.Email)</th>
                        <th><i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.DateOfBirth)</th>
                        <th><i class="fas fa-home"></i> @Html.DisplayNameFor(model => model.Address)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@count</td> <!-- Display simple count -->
                            <td>@Html.DisplayFor(modelItem => item.EmpNo)</td>
                            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Age)</td>
                            <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                            <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                            <td>@Html.DisplayFor(modelItem => item.Address)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-action"><i class="fa fa-edit"></i> Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-action"><i class="fa fa-trash"></i> Delete</a>
                            </td>
                        </tr>
                        count++;
                        <!-- Increment after each loop -->
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
