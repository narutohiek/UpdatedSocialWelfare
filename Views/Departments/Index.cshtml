@model IEnumerable<SocialWelfarre.Models.Department>

@{
    ViewData["Title"] = "Departments Management";
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
}



<!-- Add Department Form Card -->
<div class="card">
    <div class="card-body">
        <div class="form-section">
            <h4><i class="fas fa-plus-circle"></i> Add New Department</h4>
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label for="Departments" class="form-label"><i class="fas fa-building"></i> Department Name</label>
                    <input type="text" class="form-control" id="Departments" name="Departments" placeholder="Enter Department Name" required>
                </div>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Add Department</button>
            </form>
        </div>
    </div>
</div>

<!-- Departments Table Card -->
<div class="card">
    <div class="card-body">
        <div class="form-section">
        <table id="example1" class="table table-striped">
            <thead>
                <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Departments)</th>
                    <th>Edit</th>
                    <th>View</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Departments)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-action"><i class="fa fa-edit"></i> Edit</a>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary-action btn-action"><i class="fa fa-eye"></i> View</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-action"><i class="fa fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>
</div>