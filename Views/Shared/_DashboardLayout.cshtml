@functions {
    public string IsActive(string controller = null, string action = null)
    {
        var routeData = ViewContext.RouteData.Values;
        var currentController = routeData["controller"]?.ToString();
        var currentAction = routeData["action"]?.ToString();

        if (!string.IsNullOrEmpty(controller) && !string.IsNullOrEmpty(action))
            return (controller == currentController && action == currentAction) ? "active" : "";
        else if (!string.IsNullOrEmpty(controller))
            return (controller == currentController) ? "active" : "";
        else if (!string.IsNullOrEmpty(action))
            return (action == currentAction) ? "active" : "";

        return "";
    }

    public string IsTreeviewOpen(params string[] controllers)
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        return controllers.Contains(currentController) ? "menu-open" : "";
    }

    public string IsTreeviewLinkActive(params string[] controllers)
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        return controllers.Contains(currentController) ? "active" : "";
    }
}

