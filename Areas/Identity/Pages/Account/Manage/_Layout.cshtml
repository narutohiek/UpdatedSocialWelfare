@model dynamic

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    /* CSS from the second artifact */
</style>

<div class="card">
    <div class="card-body">
        <!-- Header Section -->
        <div class="form-section mb-4 pb-2">
            <h4 class="mb-3"><i class="fas fa-user-cog"></i> Manage Your Account</h4>
        </div>

        <!-- Main Content Section -->
        <div class="form-section">
            <h4 class="mb-3"><i class="fas fa-cogs"></i> Change Your Account Settings</h4>
            <hr class="mb-4" />

            <div class="row mt-4">
                <!-- Sidebar Navigation -->
                <div class="col-md-3 mb-3">
                    <div class="sidebar-nav pe-3">
                        <partial name="_ManageNav" />
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-md-9">
                    <div class="content-area ps-3 pt-2">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @RenderSection("Scripts", required: false)
}